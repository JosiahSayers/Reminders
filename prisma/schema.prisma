// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client"
    output = "./generated"
    engineType = "client"
    runtime = "bun"
}

datasource db {
  provider = "sqlite"
  url      = env("PRISMA_DATABASE_URL")
}

model Reminder {
  id Int @id @default(autoincrement())
  title String
  content String
  cron String
  cronExplanation String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  archivedAt DateTime?

  history ReminderHistory[]
}

model ReminderHistory {
  id Int @id @default(autoincrement())
  successful Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  reminder Reminder @relation(fields: [reminderId], references: [id])
  reminderId Int
}

model Message {
  id Int @id @default(autoincrement())
  successful Boolean

  title String?
  content String?
  includeLogo Boolean @default(true)

  createdAt DateTime @default(now())

  image Image?
}

model Image {
  id Int @id @default(autoincrement())
  
  originalSizeInBytes Int
  originalFilename String

  convertedSizeInBytes Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  message Message @relation(fields: [messageId], references: [id])
  messageId Int @unique
}

model Setting {
  id Int @id @default(autoincrement())

  name String @unique
  description String?
  enabled Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Configuration {
  id Int @id @default(autoincrement())

  name String @unique
  description String?
  value String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
